{
    "name": "sol-novel",
    "displayName": "Sol Novel",
    "description": "Support for the \"novel\" markup language.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "novel",
                "aliases": [
                    "Novel",
                    "novel"
                ],
                "extensions": [
                    ".nov"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "novel",
                "scopeName": "source.novel",
                "path": "./syntaxes/novel.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "sol-novel.sayHi",
                "title": "Say hi"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTests.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.84.0",
        "@types/node": "^18.17.1",
        "@types/mocha": "^10.0.6",
        "eslint": "^8.51.0",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "@vscode/test-electron": "^2.3.4",
        "ts-loader": "^9.5.0",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}